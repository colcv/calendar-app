block content
  form#form-add.form-share
    .content
      input.title(type='email' placeholder='Nhập Email bạn muốn chia sẻ')#email
      .button(style="margin-top: 20px")
        a.btn.red-btn(href=`/calendars/${calendarID}`) Hủy
        button.btn.blue-btn.ting(type='submit' id=`${calendarID}`) Chia sẻ
  script.
    function ChangeText(oFileInput, sTargetID) {
    document.getElementById(sTargetID).value = oFileInput.value;
    }
  script(src="/js/share-calendar.mjs" type='module')

